{
  "name": "flagship-bspffa",
  "version": "1.0.0",
  "description": "Building social protection floors for all",
  "main": "index.html",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/ilo-branding.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css assets/css/ilo-branding.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptrcklehmann/flagship-bspffa.git"
  },
  "keywords": [
    "social",
    "protection",
    "social",
    "protection",
    "floors",
    "flagship",
    "programme",
    "ilo",
    "bootstrap",
    "sass"
  ],
  "author": "Patrick Lehmann on behaf of the International Labour Organization",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ptrcklehmann/flagship-bspffa/issues"
  },
  "homepage": "https://github.com/ptrcklehmann/flagship-bspffa#readme",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.4.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.2",
    "serve": "^11.3.2",
    "stylelint": "^13.12.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0"
  }
}
